<!doctype html>
<html>
 <head>
  <meta charset="UTF-8">
 
  <title>Document</title>
  <style>
	div.class{
		width:960px;
		
		margin:0 auto;
		position:relative;
	}
	ul{
		list-style-type:none;
		padding:0;
		margin:0;
	}

	img{
		vertical-align:bottom;
	}
	
	#banner img{
		width:960px;
	}
	#banner{
		width:960px;
		height:384px;
		overflow:hidden;
		position:relative;
	}
	
	#banner ul.banner-img li{
		float:left;
	}

	#banner a.ck-slide{
		/*绝对定位,宽度，高度，倒角，背景颜色，透明度，上偏移距离*/
		position:absolute;
		width:35px;
		height:70px;
		border-radius:5px;
		background:#000;
		opacity:0.3;
		
		top:157px;
		
	}

	#banner a.ck-left{
		left:5px;
		background:#000 url(../CSS-02/img/img/index/arrow-left.png) no-repeat center center;
	}
	
	#banner a.ck-right{
		right:5px;
		background:#000 url(../CSS-02/img/img/index/arrow-right.png) no-repeat center center;
	}
	#banner ul.indicators{
		position:absolute;
		bottom:0px;
		left:0px;
	}
	
	#banner ul.indicators li{
		/*宽度 高度 倒角 背景颜色 右外边框*/
		width:10px;
		height:10px;
		border-radius:50%;
		background:#fff;
		margin-right:10px;
		float:left;
		cursor:pointer;
	}
